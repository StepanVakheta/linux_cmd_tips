# Managing Users and Groups:
adduser [user_name]
useradd [user_name]
less /etc/passwd
passwd [user_name]
man adduser.conf
chmod [ugo+rwx]
adduser [user_name] [group_name]
usermod -g [group] [username]
deluser [user_name]|[group_name]
usermod [user_name]
sudo -s
sudo su -

# Setting up public key authentication:
adduser [user_name]
mkdir .ssh  #-> Log in as user_name and change to the home directory
touch .ssh/authorized_keys
chmod 700 .ssh
chmod 600 .ssh/authorized_keys
ssh-keygen
ssh user_name@server_addr
ssh-copy-id user_name@server_addr
